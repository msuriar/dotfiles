### Linux specific stuff

if which screen; then

	function screenTelnet()
	{
		screen -t "$1" telnet "$@"
	}

	function rl()
	{
		screen -t "$1" rlogin "$1"
	}

	function screenSsh()
	{
		screen -t "$1" ssh "$1"
	}


	function s()
	{
		if nc -z -w 2 "$@" 22; then
			screenSsh "$@"; else
			screenTelnet "$@"
		fi
	}

	function v()
	{
		screen -t "$(basename $1)" vi "$1"
	}

	function vr()
	{
		screen -t "$(basename $1)" vi -R "$1"
	}

	alias t=s

fi
