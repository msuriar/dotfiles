# vi:filetype=gitconfig
[user]
	name = Murali Suriar
	email = code@suriar.com
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[merge]
	tool = vimdiff
[push]
  default = tracking
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
  a = add
  br = branch
  cm = commit -m
  co = checkout
  d = difftool
  di = difftool
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso
  rh = reset --hard
  stat = status
  st = status
