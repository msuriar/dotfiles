# vi:filetype=gitconfig
[include]
  path = ~/.git_author
[core]
  excludesfile = ~/.dotfiles/git/ignore
  pager = (type delta > /dev/null 2>&1 && delta | less -FSRX) || less -FSRX
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[merge]
  conflictstyle = diff3
  ff = true
  tool = vimdiff
[pull]
  rebase = true
[push]
  default = tracking
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[rerere]
  enabled = true
[alias]
  a = add
  aa = add --all .
  amend = commit --amend
  br = branch -v
  cm = commit -m
  co = checkout
  d = diff
  dc = diff --cached
  di = diff
  dt = difftool
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso
  rh = reset --hard
  s = status --short
  st = status --short
  stat = status --short
  sw = switch
