HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY
setopt VI # Not required, as EDITOR/VISUAL are set, but still handy

EDITOR=vim

export HISTFILE HISTSIZE SAVEHIST EDITOR

# Common aliases
if [[ -r ~/.zsh/zsh-aliases.common ]] ; then
	. ~/.zsh/zsh-aliases.common
fi

# Autoloads
autoload -U compinit promptinit
compinit
promptinit

# TODO: Platform specific aliases and zprofiles. Need to learn about case statements.
